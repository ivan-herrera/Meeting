<div class="container p-4">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h3>Nueva reunión</h3>
                </div>
                <div class="card-body">
                    <form action="/curso/add/" method="POST">
                        <div class="form-group mb-3">
                            <label for="descripcion">Códido de curso</label>
                            <input type="text" name="id_curso" class="form-control" placeholder="Ingresa el codigo del curso" autofocus>
                        </div>
                        <div class="form-group mb-3">
                            <label for="nombre_curso">Nombre del curso</label>
                            <input type="text" name="nombre_curso" class="form-control" placeholder="¿Comó se llamará el curso?">
                        </div>
                        <div class="form-group mb-3">
                            <label for="id_docente">Identificación del docente</label>
                            <input type="text" name="id_docente" readonly class="form-control" value="{{user.id}}">
                        </div>
                        <div class="form-group mb-3">
                            <input type="submit" value="Crear curso" class="btn btn-success btn-block">
                            <a href="/curso/" class="btn btn-outline-danger btn-block">Deshacer</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>